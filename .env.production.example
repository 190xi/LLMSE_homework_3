# Production Environment Variables Template
# Copy this file to .env.production on your server and fill in the actual values

# Node Environment
NODE_ENV=production

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here_use_openssl_rand_base64_32
NEXTAUTH_URL=http://your-server-domain.com

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: AMap API (if using Chinese maps)
NEXT_PUBLIC_AMAP_KEY=your_amap_key_here
