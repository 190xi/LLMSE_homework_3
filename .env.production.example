# Production Environment Variables Template
# Copy this file to .env.production on your server and fill in the actual values

# Node Environment
NODE_ENV=production

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here_use_openssl_rand_base64_32
NEXTAUTH_URL=http://your-server-domain.com

# DashScope API (阿里云通义千问)
DASHSCOPE_API_KEY=sk-your-dashscope-api-key-here

# Optional: 讯飞语音识别（如果不使用语音识别功能，可以不配置）
NEXT_PUBLIC_XUNFEI_APP_ID=your_xunfei_app_id_here
NEXT_PUBLIC_XUNFEI_API_KEY=your_xunfei_api_key_here
NEXT_PUBLIC_XUNFEI_API_SECRET=your_xunfei_api_secret_here

# Optional: AMap API (高德地图，如果不使用地图功能，可以不配置)
NEXT_PUBLIC_AMAP_KEY=your_amap_key_here
NEXT_PUBLIC_AMAP_SECRET=your_amap_secret_here
